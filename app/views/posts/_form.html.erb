<%= render "layouts/errors", :object => @post %>


<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, :class => 'form-control', size: "24x16" %>
  </div>
  <%= f.submit 'Publish', :class => 'btn btn-xs btn-info' %>
<% end %>
